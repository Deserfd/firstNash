<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdb47"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/text_title"
        android:textColor="#6b5e60"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_button_hint"
        app:layout_constraintEnd_toStartOf="@+id/image_button_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_button_hint" />

    <ImageButton
        android:id="@+id/image_button_hint"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#00FFFFFF"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/image_button_hint"
        android:src="@drawable/ic_answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout_nash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/button_find"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_head"
        android:weightSum="6">


        <TableRow
            android:layout_height="20dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:weightSum="6">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:text=""
                android:layout_weight="1"/>

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="@dimen/title_size"
                android:text="t1"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:textSize="@dimen/title_size"
                android:text="t2"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="48dp"
