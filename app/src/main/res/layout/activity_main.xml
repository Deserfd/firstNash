            android:layout_weight="1"
            android:weightSum="6">

            <TextView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="s1"
                android:textSize="@dimen/title_size"
                android:gravity="center"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/editText_1_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_weight="1"
                android:inputType="text"/>

